<div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3"><i></i>  Login</h1>
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>
              <button type="submit" class="btn btn-primary btn-block " style="background-color: black"> Login</button>
            </form>
            <p class="lead mt-4">
              No Account? <a href="/users/register">Register</a> or <a href="/users/auth/google">Login with <i class="fab fa-google"></i></a> / <a href="/users/auth/facebook"></i>Login with facebook</i></a>
            </p>
          </div>
        </div>
      </div>